{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "module": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true, // <- for Day.js
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "webpack.*"
  ],
  "exclude": [
    "node_modules",
  ]
}